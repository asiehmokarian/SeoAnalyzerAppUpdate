@model IEnumerable<SeoAnalyzerApp.Models.WordCountModel>
@{
    var id = Guid.NewGuid().ToString().Replace("-", "_");
}
<table id="@id" class="datatable table table-striped table-bordered table-hover" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#@id').DataTable({ searching: false, bLengthChange: false });
    });
</script>